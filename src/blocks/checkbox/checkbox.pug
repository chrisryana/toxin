mixin checkbox(checkboxOptions)
  - var {label, details, name, value, checked = false} = checkboxOptions;

  label.checkbox(class= details ? "checkbox--with-details" : "")
    input.visually-hidden.checkbox__input(type="checkbox" name= name checked= checked value= value)
    span.checkbox__indicator
      span.checkbox__mark
    span.checkbox__description
      != label
      if details
        span.checkbox__details!= details