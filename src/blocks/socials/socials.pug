-
  var socialsItems = [
    { title: "Твиттер", href: "https://twitter.com", icon: "fa-twitter" },
    { title: "Фэйсбук", href: "https://www.facebook.com", icon: "fa-facebook-square" },
    { title: "Инстаграм", href: "https://www.instagram.com", icon: "fa-instagram" },
  ]

mixin getSocialItem(social)
  li.socials__item
    a.socials__item-link(href= social.href target="_blank" rel="noopener noreferrer")
      i.fab(class= social.icon)
      span.visually-hidden= social.title

mixin getSocials(socials)
  ul.socials
    for socialItem in socials
      +getSocialItem(socialItem)

h3.visually-hidden Мы в социальных сетях:
+getSocials(socialsItems)