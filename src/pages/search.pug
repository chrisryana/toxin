extends ../layouts/default-layout
include ../blocks/room-card/room-card
include ../blocks/input/input
include ../blocks/checkbox/checkbox


block head
  - var title = "Поиск номеров в отеле Toxin";

block logo
  - var isMainPage = false


block content
  main.search-page
    .container
      .search-page__columns
        section.filters
          h2.visually-hidden Фильтр комнат
          form.filter__form(action="https://echo.htmlacademy.ru" method="post")
            +input("Даты предывания в отеле")
            +input("Гости")
            +input("Диапазон цены")
            fieldset.filters__group
              legend.filter__legend Условия размещения
              ul.filters__list
                li.filters__list-item
                  +checkbox("Можно курить", "allow-smoke")
                li.filters__list-item
                  +checkbox("Можно с питомцами", "allow-pets", true)
                li.filters__list-item
                  +checkbox("Можно пригласить гостей (до 10 человек)", "allow-guests", true)
            fieldset.filters__group
              legend.filter__legend Доступность
              ul.filters__list
                li.filters__list-item
                  +checkbox("Широкий коридор", "wide-hall")
                li.filters__list-item
                  +checkbox("Помощник для инвалидов", "helper", true)
            +input("Удобства номера")
            details.filter__group(open)
              summary.filter__legend Дополнительные удобства
              ul.filters__list
                li.filters__list-item
                  +checkbox("Широкий коридор", "wide-hall")
                li.filters__list-item
                  +checkbox("Помощник для инвалидов", "helper", true)
        section.rooms
          h1 Номера которые мы для вас подобрали
          ul.rooms__list
            li.rooms__list-item
              +roomCard({number: 888, isLux: true, cost: 9990, rate: 5, reviewCount: 145})